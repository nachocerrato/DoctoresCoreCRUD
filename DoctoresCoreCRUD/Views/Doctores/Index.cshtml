@model List<Doctor>

<h1>Doctores</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Nº de Doctor</th>
            <th>Especialidad</th>
            <th>Apellido</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Doctor doctor in Model)
            {
            <tr>
                <td>@doctor.DoctorNo</td>
                <td>@doctor.Especialidad</td>
                <td>@doctor.Apellido</td>
                <td>@doctor.Salario</td>
                <td>
                    <a class="btn btn-success"
                       asp-controller="Doctores"
                       asp-action="Details"
                       asp-route-doctorno="@doctor.DoctorNo">
                        Detalles
                    </a>
                </td>
                <td>
                    <a class="btn btn-success"
                       asp-controller="Doctores"
                       asp-action="Edit"
                       asp-route-doctorno="@doctor.DoctorNo">
                        Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-success"
                       asp-controller="Doctores"
                       asp-action="Delete"
                       asp-route-doctorno="@doctor.DoctorNo">
                        Eliminar
                    </a>
                </td>
            </tr>
            }
    </tbody>
</table>